<%- include('../partials/header')  %> 
<body>
<% function setToSunday(date) { %>
<% var day = date.getDay() || 7; %>
<% if (day != 7) %>  
<% date.setHours(-24 * (day - 7)); %> 
<% return date; %> 
<% }; %> 
<% let takingBackSunday = setToSunday(new Date());%>
<h1>Band for <%=takingBackSunday.toDateString()%></h1>
<table id="list">
    <thead>
        <tr>
            <th>Member Name</th>
            <th>Role</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% bands.forEach(function(b){%>
            <tr>
                <% if (b.playing === true) {%> 
                <td><%=b.name %> </td>
                <td><%=b.role%></td>
                <% } %> 
            </tr>
       <% }); %>
    </tbody>
</table>
</body>
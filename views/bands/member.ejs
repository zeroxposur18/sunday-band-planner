<%- include('../partials/header')  %> 
<h1>Members</h1>
<table id="list">
    <thead>
        <tr>
            <th>Member Name</th>
            <th>Role</th>
            <th>Playing?</th>
            <th>Member Info</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% bands.forEach(function(b){%>
            <tr>
                <td><%=b.name %> </td>
                <td><%=b.role%></td>
                <td><%=b.playing ? 'On this week!' : 'Not Playing'%></td>
                <td><a href="/bands/<%=b._id%>">Details</a></td>
                <td><form action="/bands/<%=b._id%>?_method=DELETE" method="POST">
                <button type="submit" id="delete">X</button></td>
                </form>
            </tr>
       <% }); %>
    </tbody>
</table>

<a href="/bands/new">Add Member</a>